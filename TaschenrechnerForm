    private void exponentenActionPerformed(java.awt.event.ActionEvent evt) {                                           
        double number1, number2;
        if(a == 0){
        try {
            number1 = Integer.parseInt(
                    this.TextField1.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        try {
            number2 = Integer.parseInt(
                    this.TextField2.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        double ergebnis = Math.pow(number1, number2);
        this.ergebnisarea.append(
                number1+" ^ "+number2+" = "+ergebnis+"\n");
        }
        else if(a == 1){
        
    
            double number3, number4;
            try {
                number1 = Integer.parseInt(
                    this.TextField1.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            try {
                number2 = Integer.parseInt(
                    this.TextField2.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
             try {
                number3 = Integer.parseInt(
                    this.TextField3.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;}
            try {
                number4 = Integer.parseInt(
                    this.TextField4.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
               return;
            }

            double ergebnis = Math.pow(number1 / number3, number2 / number4);
            this.ergebnisarea.append(
                "("+number1+" / "+number3+")"+" ^ "+"("+number2+" / "+number4+")"+" = "+ ergebnis+"\n");


            }
        
        
    }                                          

    private void WurzelActionPerformed(java.awt.event.ActionEvent evt) {                                       
        double number1;
        if(a == 0){
        try {
            number1 = Integer.parseInt(
                    this.TextField1.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        
        double ergebnis = Math.sqrt(number1);
        this.ergebnisarea.append(
                "√"+ number1+" = "+ergebnis+"\n");
        }
        else if(a == 1){
        
    
            double number3;
            try {
                number1 = Integer.parseInt(
                    this.TextField1.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            
             try {
                number3 = Integer.parseInt(
                    this.TextField3.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;}
            

            double ergebnis = Math.sqrt(number1 / number3);
            this.ergebnisarea.append(
               "√"+"("+number1+" / "+number3+")"+" = "+ ergebnis+"\n");


            }
        
    }                                      

    private void BrücheJAActionPerformed(java.awt.event.ActionEvent evt) {                                         
        TextField3.setVisible(true);
        TextField4.setVisible(true);
        TextField1.setVisible(true);
        TextField2.setVisible(true);
        Zahl1.setVisible(true);
        Zahl2.setVisible(true); 
        
        Bruch2Nenner.setVisible(true);
        Bruch1Nenner.setVisible(true);
        Zahl1.setText("Bruch1 Zähler");
        Zahl2.setText("Bruch2 Zähler");
        
        TextFieldAuslesen.setVisible(false);
        RechnungAuslesen.setVisible(false);
        minusButton.setVisible(true);
        plusButton.setVisible(true);
        MalButton.setVisible(true);
        DurchButton.setVisible(true);
        
        a = 1;
    }                                        

    private void BrücheNeinActionPerformed(java.awt.event.ActionEvent evt) {                                           
        TextField3.setVisible(false);
        TextField4.setVisible(false);
        Bruch2Nenner.setVisible(false);
        Bruch1Nenner.setVisible(false);
        Zahl1.setText("Zahl 1");
        Zahl2.setText("Zahl 2");
        
       TextField1.setVisible(true);
       TextField2.setVisible(true);
       Zahl1.setVisible(true);
       Zahl2.setVisible(true); 
       minusButton.setVisible(true);
       plusButton.setVisible(true);
       MalButton.setVisible(true);
       DurchButton.setVisible(true);
       TextFieldAuslesen.setVisible(false);
       RechnungAuslesen.setVisible(false);
       exponenten.setVisible(false);
       Wurzel.setVisible(false);
        a = 0;
    }                                          

