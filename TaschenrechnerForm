    private void erweiteterTaschenrechnerJAActionPerformed(java.awt.event.ActionEvent evt) {                                                           
       exponenten.setVisible(true);
       Wurzel.setVisible(true);
       TextFieldAuslesen.setVisible(false);
       RechnungAuslesen.setVisible(false);
       minusButton.setVisible(true);
       plusButton.setVisible(true);
       MalButton.setVisible(true);
       DurchButton.setVisible(true);
    }                                                          

    private void erweiteterTaschenrechnerNEINActionPerformed(java.awt.event.ActionEvent evt) {                                                             
        exponenten.setVisible(false);
        Wurzel.setVisible(false);
        minusButton.setVisible(true);
        plusButton.setVisible(true);
        MalButton.setVisible(true);
        DurchButton.setVisible(true);
       
    }                                                            

    private void auslesenjaActionPerformed(java.awt.event.ActionEvent evt) {                                           
       TextField1.setVisible(false);
       TextField2.setVisible(false);
       TextField3.setVisible(false);
       TextField4.setVisible(false);
       Zahl1.setVisible(false);
       Zahl2.setVisible(false);
       Bruch2Nenner.setVisible(false);
       Bruch1Nenner.setVisible(false);
       TextFieldAuslesen.setVisible(true);
       RechnungAuslesen.setVisible(true);
       minusButton.setVisible(false);
       plusButton.setVisible(false);
       MalButton.setVisible(false);
       DurchButton.setVisible(false);
       exponenten.setVisible(false);
       Wurzel.setVisible(false);
               
               
    }                                          

    private void auslesenneinActionPerformed(java.awt.event.ActionEvent evt) {                                             
       TextField1.setVisible(true);
       TextField2.setVisible(true);
       Zahl1.setVisible(true);
       Zahl2.setVisible(true); 
       minusButton.setVisible(true);
       plusButton.setVisible(true);
       MalButton.setVisible(true);
       DurchButton.setVisible(true);
       TextFieldAuslesen.setVisible(false);
       RechnungAuslesen.setVisible(false);
       exponenten.setVisible(false);
       Wurzel.setVisible(false);
    }                                            

    private void TextFieldAuslesenActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        int number1, number2;
        
        
        String x = this.TextFieldAuslesen.getText();
        String[] Rechnung = x.split("*");
        number1 = Integer.parseInt(Rechnung[0]);
        number2 = Integer.parseInt(Rechnung[1]);
        double ergebnis = number1 / number2;
        this.ergebnisarea.append(
              number1+" - "+number2+" = "+ergebnis+"\n");
        
        
        
        
        
    }                                                 

   
    
