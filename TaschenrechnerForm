    private void plusButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
    double number1, number2;
    if(a == 0){
    try {
        number1 = Integer.parseInt(
            this.TextField1.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
    try {
        number2 = Integer.parseInt(
            this.TextField2.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
    double ergebnis = number1 + number2;
    this.ergebnisarea.append(
        number1+" + "+number2+" = "+ergebnis+"\n");
    }
    else if(a == 1){
        
    
    double number3, number4;
    try {
        number1 = Integer.parseInt(
            this.TextField1.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
    try {
        number2 = Integer.parseInt(
            this.TextField2.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
     try {
        number3 = Integer.parseInt(
            this.TextField3.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
        return;}
    try {
        number4 = Integer.parseInt(
            this.TextField4.getText());
    }
    catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
       return;
    }
       
    double ergebnis = (number1 / number3) + (number2 / number4);
    this.ergebnisarea.append(
        number1+" / "+number3+" + "+number2+" / "+number4+" = "+ ergebnis+"\n");
    
        
        
        
    }
    }                                          

    private void minusButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
         double number1, number2;
         if(a == 0){
         try {
            number1 = Integer.parseInt(
                    this.TextField1.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        try {
            number2 = Integer.parseInt(
                    this.TextField2.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        double ergebnis = number1 - number2;
        this.ergebnisarea.append(
                number1+" - "+number2+" = "+ergebnis+"\n");
    
         }
         else if(a == 1){
        
    
            double number3, number4;
            try {
                number1 = Integer.parseInt(
                    this.TextField1.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            try {
                number2 = Integer.parseInt(
                    this.TextField2.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
             try {
                number3 = Integer.parseInt(
                    this.TextField3.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;}
            try {
                number4 = Integer.parseInt(
                    this.TextField4.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
               return;
            }

            double ergebnis = (number1 / number3) - (number2 / number4);
            this.ergebnisarea.append(
                number1+" / "+number3+" - "+number2+" / "+number4+" = "+ ergebnis+"\n");




            }
         
    }                                           

    private void DurchButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        double number1, number2;
        if(a == 0){
        try {
            number1 = Integer.parseInt(
                    this.TextField1.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        try {
            number2 = Integer.parseInt(
                    this.TextField2.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        double ergebnis = number1 / number2;
        this.ergebnisarea.append(
                number1+" / "+number2+" = "+ergebnis+"\n");
        }
        else if(a == 1){
        
    
            double number3, number4;
            try {
                number1 = Integer.parseInt(
                    this.TextField1.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            try {
                number2 = Integer.parseInt(
                    this.TextField2.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
             try {
                number3 = Integer.parseInt(
                    this.TextField3.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
                return;}
            try {
                number4 = Integer.parseInt(
                    this.TextField4.getText());
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Nicht gültig", "Error", JOptionPane.ERROR_MESSAGE);
               return;
            }

            double ergebnis = (number1 / number3) / (number2 / number4);
            this.ergebnisarea.append(
                "("+number1+" / "+number3+")"+" / "+"("+number2+" / "+number4+")"+" = "+ ergebnis+"\n");




            }
    }                                           

